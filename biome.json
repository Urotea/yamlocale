{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "semicolons": "always",
      "quoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "noUselessElse": "off",
        "useTemplate": "off",
        "noInferrableTypes": "off",
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "off"
      },
      "correctness": {
        "noUnnecessaryContinue": "off"
      }
    }
  },
  "files": {
    "ignore": ["dist/**", "node_modules/**"]
  }
}
